<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h4>Log in to continue.</h4>
 Please enter your email and password to access the EcoSynthetix Quality Assurance Website. </p>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">        
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
  <div class="other"><%=link_to('Forgot your password?',new_user_password_path) %></div>
<% end %>

<script>$(function() {$('#user_username').focus(); });</script>