<h1>Facilities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.display_name %></td>
    <td><%= facility.city %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Remove', facility, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br>

<div class="actions field">
  <%= link_to 'New Facility', new_facility_path, :class => 'link-button' %>
</div>
