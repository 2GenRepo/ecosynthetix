<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Ecosynthetix Quality Assurance</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="application">
  <!--[if lt IE 8]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
  <header>
    <div class="user-info">
      <div class="wrapper">
        <% if user_signed_in? %>
        <%= link_to(current_user.first_name + ' ' + current_user.last_name,edit_user_path(current_user)) %> <%=link_to('Logout',destroy_user_session_path, :method => :delete)%>
        <% end %>
      </div>
    </div>
  </header>
  
  <div role="main" id="main" x-data-controller="<%=controller.controller_name%>" x-data-action="<%=controller.action_name%>">
  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
    <div class="navigation">
      <div class="wrapper">
        <ul>
          <li class="first"><%=link_to(image_tag('logo-nav.png',{ :width => 250, :height => 95 }), { :controller => 'main', :action => 'dashboard' }) %></li>
          <li class="<%=controller.controller_name == 'main' && controller.action_name == 'dashboard' ? 'current' : '' %>"><%=link_to('Dashboard', '/dashboard') %>An overview of operations</li>
          <% if current_user.administrator? || current_user.technician? || current_user.quality? %><li class="<%=controller.controller_name == 'quality_histories' || controller.controller_name == 'quality' ? 'current' : '' %>"><%=link_to('Quality Assurance', '/quality-assurance') %>Manage quality assurance data</li><% end %>
          <% if current_user.administrator? || current_user.technician? || current_user.quality? || current_user.labSupervisor? %><li class="<%=controller.controller_name == 'lot' || controller.action_name == 'reporting' ? 'current' : '' %>"><%=link_to('Reporting', '/reporting') %>Generate and view reports</li><% end %>
          <% if current_user.administrator? %><li class="<%=controller.controller_name == 'users' ? 'current' : '' %>"><%=link_to('Users & Permissions', '/users') %>Manage users and access to data</li><% end %>
          <% if current_user.administrator? %><li class="last <%=controller.action_name == 'settings' || controller.action_name == 'options' || controller.controller_name == 'facilities' || controller.controller_name == 'products' || controller.controller_name == 'alerts' || controller.controller_name == 'lab_methods' ? 'current' : '' %>"><%=link_to('Settings', '/settings') %>Application functionality configuration</li><% end %>
        </ul>
      </div>
    </div>
    
    <div class="content">
      <div class="wrapper">
        <div class="<%=controller.controller_name%>">
          <%= yield %>
        </div>
      </div>
    </div>

  </div>

  <footer>
  
  </footer>
  
</body>
</html>