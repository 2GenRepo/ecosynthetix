<%= form_for(@alert) do |f| %>
  <% if @alert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h2>

      <ul>
      <% @alert.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-wrapper" style="position:relative;width: 100%;height: 120px;">
    <div class="field" style="position:absolute;top:1px;left: 0;right: 0;">
      <%= f.text_field :who_to_alert, :style => 'width:100%;' %>
      <small style="font-style:italic;padding: 10px 0;display: block;">For alerts to more than one email address, add a comma between each one.</small>
    </div>
    <div class="actions" style="position:absolute;top:0;right:0;">
      <%= f.submit %>
    </div>
  </div>
  
<% end %>
